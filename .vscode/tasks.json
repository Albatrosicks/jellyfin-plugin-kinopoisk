{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder:workspace}/src/Kinopoisk.sln",
                // Ask dotnet build to generate full paths for file names.
                "/property:GenerateFullPaths=true",
                // Do not generate summary otherwise it leads to duplicate errors in Problems panel
                "/consoleloggerparameters:NoSummary",
                "/property:Version=10.7.0.2"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish-to-run",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder:workspace}/src/Jellyfin.Plugin.Kinopoisk/Jellyfin.Plugin.Kinopoisk.csproj",
                "--output",
                "/jellyfin-data/plugins/kinopoisk",
                "/property:GenerateFullPaths=true",
                "/property:Version=10.7.0.2"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "make-dist",
            "command": "jprm",
            "type": "process",
            "args": [
                "-v", "DEBUG",
                "plugin", "build", "${workspaceFolder:workspace}/src/Jellyfin.Plugin.Kinopoisk/"
            ],
            "options": {
                "cwd": "${workspaceFolder:workspace}/"
            },
            "group": "none",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "make-dist-publish",
            "command": "bash",
            "type": "process",
            "args": [
                "${workspaceFolder:workspace}/publish.sh"
            ],
            "options": {
                "cwd": "${workspaceFolder:workspace}/"
            },
            "group": "none",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile",
            // "dependsOn": ["make-dist"]
        }
    ]
}
